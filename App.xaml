<Application x:Class="DDManagerSolution.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DDManagerSolution"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <ResourceDictionary Source="/View/Resources/Brushes.xaml"/>
                <ResourceDictionary Source="/View/Resources/ConverterDictionary.xaml"/>

                <ResourceDictionary Source="/View/Resources/Styles/TextBlockDictionary.xaml"/>
                <ResourceDictionary Source="/View/Resources/Styles/TabControlDictionary.xaml"/>
                <ResourceDictionary Source="/View/Resources/Styles/TabItemDictionary.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
