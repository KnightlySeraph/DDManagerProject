<Window x:Class="DDManagerSolution.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDManagerSolution"
        xmlns:views="clr-namespace:DDManagerSolution.View"
        xmlns:viewmodel="clr-namespace:DDManagerSolution.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>

        <DataTemplate DataType="{x:Type viewmodel:ScreenViewModel}">
            <views:ScreenView/>
        </DataTemplate>
        
    </Window.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="1" x:Name="Workspaces" ItemsSource="{Binding Screens}"
                    SelectedItem="{Binding SelectedScreen}"/>

        <views:MainMenu Visibility="{Binding HasScreens, Converter={StaticResource BoolInvVisibilityConverter}}"/>

        <ContentControl Grid.Row="0" Content="{Binding SelectedScreen}"/>

    </Grid>
</Window>
